@model ADT.Core.Mvc.TagHelpers.Custom.Models.Home.MovieViewModel

<style>
    .movie-tag {
        width: 500px;
    }

    .movie-title {
        font-weight: bold;
        font-size: x-large;
    }

    .movie-year {
        font-weight: normal;
        font-style: italic;
    }

    .movie-director {
        padding: 5px;
    }

    .movie-summary {
        padding: 5px;
    }

    .movie-stars {
        padding: 5px;
    }
</style>

<movie for-title="Title"
        for-year="ReleaseYear" 
        for-director="Director"
        for-summary ="Summary"
        for-stars="Stars" />


