@model ADT.Core.Mvc.TagHelpers.Custom.Models.Home.EmployeesViewModel

@foreach (var employee in Model.Employees)
{
    <employee summary="@employee.Name" job-title="@employee.JobTitle" profile="@employee.Profile">
        @foreach (var friend in employee.Friends)
        {
            <friend name="@friend.Name" />
        }
    </employee>
}

