@{ 
    var isHungry = false;
    var gender = 2;
    var technology = "asp.net core mvc";
    IEnumerable<string> friends = new[] { "zhangsan","lisi","wangwu" };
    var count = technology.Length;
}

@if (isHungry)
{
    <p>I'm Hungry!</p>
}
else
{
    <p>I'm full</p>
}

@switch (gender)
{
    case 0:
        <p>Male</p>
        break;
    case 1:
        <p>Female</p>
        break;
    default:
        <p>gg</p>
        break;
}

@for (int i = 0; i < technology.Length; i++)
{
    // <text> because HTML being produced is not inside a tag
    <text>@technology[i].ToString().ToUpper()</text>
}


<ul>
    @foreach (var item in friends)
    {
        <li>@item</li>
    }
</ul>

@do
{
    <text>@technology[count-1].ToString().ToUpper()</text>
    count -= 1;
} while (count > 0);

@try
{
    var a = 1;
